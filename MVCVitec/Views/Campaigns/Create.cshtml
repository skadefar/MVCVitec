@model MVCVitec.Models.Campaign
@using MVCVitec.Services;
@inject CampaignService Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products" class="control-label"></label>
                @Html.DropDownList("Produkter", Products.GetProducts().Select(x => new SelectListItem() { Text = x.Name, Value = x.Price.ToString() }));
            </div>
            <div class="form-group">
                <label asp-for="CampaignName" class="control-label"></label>
                <input asp-for="CampaignName" class="form-control" />
                <span asp-validation-for="CampaignName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignDescription" class="control-label"></label>
                <input asp-for="CampaignDescription" class="form-control" />
                <span asp-validation-for="CampaignDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignPrice" class="control-label"></label>
                <input asp-for="CampaignPrice" class="form-control" />
                <span asp-validation-for="CampaignPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldPrice" class="control-label"></label>
                <input asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
